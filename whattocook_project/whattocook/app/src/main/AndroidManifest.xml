<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.tp.whattocook">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Launcher"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">

            <!--
            <intent-filter>
            </intent-filter>
            -->

        </activity>

        <activity
            android:name=".Signup"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".RecipeOfTheDay"
            android:label="@string/title_activity_recipe_of_the_day"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Recipe"
            android:label="@string/title_activity_recipe"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".AskRecipeOrIdea"
            android:label="@string/title_activity_ask_recipe_or_idea"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Search"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".RandomRecipe"
            android:label="@string/title_activity_random_recipe"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--<activity
            android:name=".ListOfRecipes"
            android:label="@string/title_activity_list_of_recipes"
            android:theme="@style/AppTheme.NoActionBar"></activity>-->
    </application>

</manifest>
